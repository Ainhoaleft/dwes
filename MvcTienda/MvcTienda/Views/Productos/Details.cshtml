@model MvcTienda.Models.Producto

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Texto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Texto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        @*
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioCadena)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioCadena)
        </dd>
        *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Escaparate)
        </dt>
        <dd class="col-sm-10">
            @{
                string Verdadero = "Visible";
                if (Model.Escaparate == true)
                {
                    Verdadero = "Visible";
                }
                else
                {
                    Verdadero = "No visible";
                }
            }
            @Verdadero
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Escaparate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd>
            @{
                string Imagen = "ImagenDefault.jpg";
                if (Model.Imagen != null)
                {
                    Imagen = Model.Imagen;
                }
            }
            <img style="width:100px" src="~/imagenes/@Imagen" />
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Imagen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Descripcion)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Back to List</a>
</div>
@* Se añade código para presentar los avisos del equipo seleccionado *@
@{
    var contador = 0;
    contador = contador + 1;
}
<div>
    <h4>Avisos recibidos del equipo</h4>
    <table class="table border-bottom">
        <tr>
            <th>Producto</th>
            <th>Fecha Aviso</th>
            <th>Fecha Cierre</th>
            <th>Empleado</th>
            <th>Tipo de avería</th>
            <th></th> 
        </tr>
    </table>
</div>

<p class="text-center">Número de productos: @contador </p>
<div class="d-print-none text-center">
    <a class="btn btn-primary" href="javascript:window.print()">Imprimir</a>
</div>
